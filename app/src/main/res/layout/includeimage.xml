<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10.0dip"
    android:layout_marginTop="10.0dip"
    android:layout_marginRight="10.0dip"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:id="@id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffffff"
        app:cardCornerRadius="10.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10.0dip"
                android:paddingTop="10.0dip"
                android:paddingRight="10.0dip">

                <ImageView
                    android:id="@+id/postimg"
                    android:layout_width="100.0dip"
                    android:layout_height="100.0dip"
                    android:paddingBottom="6.0dip"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_toLeftOf="@id/delete"
                    android:layout_toRightOf="@id/postimg"
                    android:text="titel"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15.0dip" />

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="68.0dip"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_toRightOf="@id/postimg"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4.0dip"
                    android:maxLines="3"
                    android:text="dfkdjfdlsfjdkfjdkfldjfdkdkfsldfldfkdfjkdjfdkfjdkfdjfldjfkdlfjdlkfjdlkfjdfkdjflkdlsdsf"
                    android:textColor="#ff000000"
                    android:textSize="15.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10.0dip">

                <TextView
                    android:id="@+id/admin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:textColor="#ff000000"
                    android:visibility="gone" />

                <TextView
                    android:id="@id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10.0dip"
                    android:text="Nov 13 2018"
                    android:textColor="#ff000000" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>