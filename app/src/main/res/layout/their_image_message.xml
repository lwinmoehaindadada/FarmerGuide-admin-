<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/their"
    android:paddingLeft="10.0dip"
    android:paddingTop="10.0dip"
    android:paddingRight="60.0dip"
    android:paddingBottom="10.0dip"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/avatar"
        android:layout_width="34.0dip"
        android:layout_height="34.0dip"
        android:src="@drawable/farmer_logo"
        android:layout_alignParentLeft="true"
        xmlns:app="http://schemas.android.com/apk/res-auto" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginTop="10.0dip"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="5.0dip">

        <android.support.v7.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:paddingLeft="5.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="5.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.0">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/image_view"
                    android:layout_width="200.0dip"
                    android:layout_height="130.0dip"
                    android:src="@drawable/image_placeholder"
                    android:scaleType="centerCrop"
                    android:minWidth="200.0dip"
                    android:minHeight="150.0dip" />

                <ProgressBar
                    android:id="@+id/image_load"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <TextView
                android:textSize="10.0sp"
                android:textColor="#ffffffff"
                android:id="@+id/time_show"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="13:47 AM" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
</RelativeLayout>